{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "organizeImports": { "enabled": true },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": ["node_modules/**/*", "dist/**/*", ".next/**/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  }
}
